@model Diplomska.ViewModels.Edit_EventPicture

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color:aliceblue">Edit</h1>

<h4 style="color:aliceblue">Event</h4>
<hr style="color:aliceblue" />
<div class="row  text-ligth" style="color:aliceblue">
    <div class="col-md-4">
        <form asp-action="Edit" form enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input class="bg-secondary text-ligth" type="hidden" asp-for="Event.Id" />
            <div class="form-group">

                <label asp-for="Event.Title" class="control-label"></label>
                <input asp-for="Event.Title" class="form-control bg-secondary text-ligth" />
                <span asp-validation-for="Event.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Date" class="control-label"></label>
                <input asp-for="Event.Date" class="form-control bg-secondary text-ligth" />
                <span asp-validation-for="Event.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Time" class="control-label"></label>
                <input asp-for="Event.Time" class="form-control bg-secondary text-ligth" />
                <span asp-validation-for="Event.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Genre" class="control-label"></label>
                <input asp-for="Event.Genre" class="form-control bg-secondary text-ligth" />
                <span asp-validation-for="Event.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Price" class="control-label"></label>
                <input asp-for="Event.Price" class="form-control bg-secondary text-ligth " />
                <span asp-validation-for="Event.Price" class="text-danger"></span>
            </div>

            <div class="form-group" style="display:none">
                <label asp-for="Event.Poster" class="control-label"></label>
                <input asp-for="Desc" class="form-control" readonly="@(true)">
                <span asp-validation-for="Event.Poster" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfileImage" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="ProfileImage" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile"></label>
                </div>
            </div>

            <div class="form-group" style="color:aqua; margin-top:7px;">
                <input type="submit" style="color:aqua; margin-top:7px;" value="Save" class="btn btn-primary" />
            </div>
            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                </script>
            }
        </form>
    </div>
</div>

<div>
    <a style ="color:aqua; margin-top:7px;" asp-action="Index">Back to List</a>
</div>

