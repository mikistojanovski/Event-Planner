@{
}
@model Diplomska.ViewModels.Edit_EventPicture

@{
    ViewData["Title"] = "Edit Picture";
}

<h3 style="color:darkblue">Edit Event's Picture</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPicture" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Event.Id" />
            <div class="form-group">
                <label asp-for="Event.Title" class="control-label"></label>
                <input asp-for="Event.Title" class="form-control" />
                <span asp-validation-for="Event.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Date" class="control-label"></label>
                <input asp-for="Event.Date" class="form-control" />
                <span asp-validation-for="Event.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Genre" class="control-label"></label>
                <input asp-for="Event.Genre" class="form-control" />
                <span asp-validation-for="Event.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Price" class="control-label"></label>
                <input asp-for="Event.Price" class="form-control" />
                <span asp-validation-for="Event.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Hoster.Username" class="control-label"></label>
                <input asp-for="Event.Hoster.Username" class="form-control" />
                <span asp-validation-for="Event.Hoster.Username" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="Event.Poster" class="control-label"></label>
                <input asp-for="Desc" class="form-control" readonly="@(true)">
                <span asp-validation-for="Event.Poster" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfileImage" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="ProfileImage" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile"></label>
                </div>
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>
            <br />


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model?.Event.Id">Back to Details</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}